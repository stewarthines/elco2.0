<div class="container_12 form">
	<%= erb :_backend_menu %>
	<div class="grid_3"><h2>Movie Database</h2></div>
	<div class="grid_3">
		<input type="button" class="button" value="Add a Movie" style="margin-top:-5px;" onclick="window.location='/add_movie'"/>
	</div>
	<div class="grid_3">
		<input type="button" class="button" value="Now Showing" style="margin-top:-5px;" onclick="window.location='/add_now_showing'"/>
	</div>
	<div class="grid_3">
		<input type="button" class="button" value="Upcoming Movies" style="margin-top:-5px;" onclick="window.location='/add_upcoming'"/>
	</div>
	<div class="grid_12"><hr /></div>
	<div class="grid_12"><h3>Movies:</h3></div>
	<div class="grid_11 prefix_1">
		<ol>
			<% Movie.all.each do |M | %>
			<li>
				<span><%= M.Title %></span>
				<span> | </span>
				<a href="/remove_movie/<%= M.id %>">Remove</a>
			</li>
			<% end %>
		</ol>
	</div>
</div>