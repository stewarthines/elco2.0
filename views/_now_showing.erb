<div class="nowShowing hidden-phone">
	<div class="row-fluid">
		<div class="span12">
			<div class="page-header">
			  <h1>Now Showing:</h1>
			</div>
		</div>
	</div>
	<div class="row-fluid" data-bind="foreach: {data: NowShowings, beforeRemove: ui.removeNowShowingAnimation}">
		<div class="row-fluid">
			<div class="span3">
				<img data-bind="attr: {src: movie.Poster_url}">
			</div>
			<div class="span9">
				<h3 data-bind="text: movie.Title"></h3>
				<ul class="unstyled">
					<li><strong>Rated:</strong>&nbsp;<span data-bind="text: movie.Rating"></span></li>
					<li><strong>Starring:</strong>&nbsp;<span data-bind="text: movie.Starring"></span></li>
					<li><strong>Runtime:</strong>&nbsp;<span data-bind="text: movie.RunTime"></span></li>
					<li><strong>Showing Dates:</strong>&nbsp;<span data-bind="text: Dates"></span></li>
				</ul>
				<hr />
				<p class="lead" data-bind="text: movie.Description"></p>
				<nav>
					<a data-bind="attr: {href: movie.Trailer_url }">Watch The Trailer</a>
					&nbsp;<span>|</span>&nbsp;
					<a data-bind="attr: {href: movie.Reviews_url }">Read The Reviews</a>
					&nbsp;<span>|</span>&nbsp;
					<a data-bind="attr: {href: movie.IMDB_url }">View on IMDB</a>
				</nav>
			</div>
		</div>	
		<br />	
		<div class="row-fluid" data-bind="if: $parent.ui.showRemoveButton">
			<button data-bind="click: $parent.fn.removeNowShowing"  type="submit" class="btn btn-large btn-danger span12"><span class="icon-ui-icon-circle-close"></span>&nbsp;Remove This Movie</button>
		</div>
	</div>
</div>
<!-- phone version -->
