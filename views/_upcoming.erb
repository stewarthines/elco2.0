<div class="upcomingMovies well hidden-phone hidden-tablet">
	<div class="row-fluid">
		<div class="span12">
			<div class="page-header">
			  <h2>Upcoming Movies:</h2>
			</div>
		</div>
	</div>
	<div class="row-fluid" data-bind="foreach: {data: Upcomings, beforeRemove: ui.removeUpcomingAnimation}">		
		<div class="span2 show">
			<img data-bind="attr: {src: movie.Poster_url}" width="142" height="220" />
			<ul class="unstyled">
				<li><a data-bind="attr: {href: movie.Trailer_url }" >View The Trailer</a></li>
				<li><a data-bind="attr: {href: movie.IMDB_url }" >See on IMDB</a></li>
				<li><button data-bind="visible: $parent.ui.showRemoveButton, click: $parent.fn.removeUpcoming" class="btn btn-danger" ><span class="icon-ui-icon-circle-close"></span> &nbsp;Remove</button></li>
			</ul>
		</div>
		<div class="span2">
			<h3 data-bind="text: movie.Title"></h3>
			<p data-bind="text: movie.Description"></p>
		</div>			
	</div>
</div>
<div class="upcomingMovies well hidden-desktop">
	<div class="row-fluid">
		<div class="span12">
			<div class="page-header">
			  <h2 style="text-align:center;">Upcoming Movies:</h2>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<% Upcoming.all.each do |u| %>
		<div class="span12 show">
			<img src="<%= u.movie.Poster_url %>" width="142" height="220" />
			<a class="btn btn-large" style="margin-bottom:10px;" href="<%= u.movie.Trailer_url %>">View The Trailer</a>
			<a class="btn btn-large" "margin-bottom:10px;" href="<%= u.movie.IMDB_url %>">See on IMDB</a>
			<a data-bind="visible: ui.showRemoveButton" href="/remove_upcoming/<%= u.id %>">Remove This Movie</a>
		</div>
		<div class="span12">
			<h3><%= u.movie.Title %></h3>
			<p><%= u.movie.Description %></p>
		</div>
		<% end %>	
	</div>
</div>


